package pe.com.bn.app.view;

import javax.faces.bean.ManagedBean;
import javax.inject.Named;
import javax.faces.context.FacesContext;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpSession;
import java.net.InetAddress;
import java.net.UnknownHostException;

@ManagedBean
@Named
public class WelcomeView {

    private String message = "¡Hola Mundo desde JSF!";
    private int visitCount = 0;

    public WelcomeView() {
        incrementVisitCount();
    }

    public String getMessage() {
        return message;
    }

    public void setMessage(String message) {
        this.message = message;
    }

    // Método para obtener la IP del cliente
    public String getClientIP() {
        FacesContext facesContext = FacesContext.getCurrentInstance();
        HttpServletRequest request = (HttpServletRequest) facesContext.getExternalContext().getRequest();
        return request.getRemoteAddr();
    }

    // Método para obtener la IP del servidor
    public String getServerIP() {
        try {
            InetAddress serverIP = InetAddress.getLocalHost();
            return serverIP.getHostAddress();
        } catch (UnknownHostException e) {
            return "IP desconocida";
        }
    }

    // Método para obtener el número de visitas a la página
    public int getVisitCount() {
        return visitCount;
    }

    // Incrementa el contador de visitas cada vez que se accede a la página
    private void incrementVisitCount() {
        FacesContext facesContext = FacesContext.getCurrentInstance();
        HttpSession session = (HttpSession) facesContext.getExternalContext().getSession(true);
        Integer count = (Integer) session.getAttribute("visitCount");
        if (count == null) {
            count = 0;
        }
        count++;
        session.setAttribute("visitCount", count);
        this.visitCount = count;
    }

    // Método para obtener el nombre del navegador del cliente
    public String getClientBrowser() {
        FacesContext facesContext = FacesContext.getCurrentInstance();
        HttpServletRequest request = (HttpServletRequest) facesContext.getExternalContext().getRequest();
        return request.getHeader("User-Agent");
    }
}
